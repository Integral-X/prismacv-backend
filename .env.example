# Application
APP_NAME=PrismaCV
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DATABASE_URL="postgresql://prismacv:password@localhost:5432/prismacv_dev"
DATABASE_URL_TEST="postgresql://prismacv:password@localhost:5433/prismacv_test"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
DISABLE_CORS=true
CORS_ORIGIN=http://localhost:3001

# Unleash Feature Flags (optional - runs in mock mode if not configured)
UNLEASH_URL=https://unleash.prismacv.com/api/
UNLEASH_API_TOKEN=your-server-side-api-token-here
UNLEASH_APP_NAME=prismacv-api
UNLEASH_REFRESH_INTERVAL=15000
UNLEASH_METRICS_INTERVAL=60000

# SMTP Email Configuration (for OTP verification emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=PrismaCV
SMTP_FROM_EMAIL=noreply@prismacv.com

# OTP Configuration
OTP_EXPIRY_MINUTES=10

# Logging
LOG_LEVEL=info

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=https://prismacv.com/api/v1/oauth/linkedin/callback
