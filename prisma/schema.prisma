generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  password       String?
  name           String?
  role           UserRole         @default(REGULAR)
  refreshToken   String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  avatarUrl      String?
  provider       String           @default("local")
  providerId     String?
  oauth_accounts oauth_accounts[]

  @@index([provider, providerId])
  @@map("users")
}

model oauth_accounts {
  id           String    @id
  userId       String
  provider     String
  providerId   String
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?
  metadata     Json?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  users        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@index([userId])
}

enum OAuthProvider {
  LINKEDIN
  GOOGLE
}

enum UserRole {
  REGULAR
  PLATFORM_ADMIN
}
