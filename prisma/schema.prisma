generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  password     String?
  name         String?
  role         UserRole  @default(REGULAR)
  refreshToken String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  avatarUrl    String?
  provider     String?
  providerId   String?

  @@unique([provider, providerId])
  @@map("users")
}

enum OAuthProvider {
  LINKEDIN
  GOOGLE
}

enum UserRole {
  REGULAR
  PLATFORM_ADMIN
}
