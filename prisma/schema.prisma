generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @db.Uuid
  email         String      @unique
  password      String?
  name          String?
  role          UserRole  @default(REGULAR)
  isMasterAdmin Boolean   @default(false)
  refreshToken  String?
  emailVerified Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  avatarUrl     String?
  provider      String?
  providerId    String?
  otps          Otp[]
  authTokens    AuthToken[]
  oauthAccessToken String?
  oauthRefreshToken String?
  oauthTokenExpiresAt DateTime?
  linkedinCvImports LinkedinCvImport[]

  @@unique([provider, providerId])
  @@map("users")
}

model LinkedinCvImport {
  id             String   @id @db.Uuid
  userId         String   @db.Uuid
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider       String   @default("LINKEDIN")
  linkedinHandle String?
  linkedinUrl    String
  fetchedAt      DateTime @default(now())
  dataScope      Json
  warnings       Json?
  profile        Json
  experience     Json
  education      Json
  skills         Json
  certifications Json
  projects       Json
  publications   Json
  volunteer      Json
  honors         Json
  languages      Json
  courses        Json
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([userId, linkedinUrl])
  @@index([userId, fetchedAt])
  @@map("linkedin_cv_imports")
}

enum OAuthProvider {
  LINKEDIN
  GOOGLE
}

enum UserRole {
  REGULAR
  PLATFORM_ADMIN
}

enum OtpPurpose {
  SIGNUP_EMAIL_VERIFICATION
  PASSWORD_RESET
}

model Otp {
  id          String     @id @default(cuid())
  userId      String     @db.Uuid
  purpose     OtpPurpose
  otpHash     String
  attempts    Int        @default(0)
  maxAttempts Int        @default(3)
  expiresAt   DateTime
  usedAt      DateTime?
  createdAt   DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, purpose])
  @@map("otp_tokens")
}

enum AuthTokenPurpose {
  PASSWORD_RESET
  EMAIL_VERIFICATION_LINK
  ACCOUNT_ACTIVATION
}

model AuthToken {
  id        String           @id @default(cuid())
  userId    String           @db.Uuid
  purpose   AuthTokenPurpose
  tokenHash String           @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, purpose])
  @@map("auth_tokens")
}
